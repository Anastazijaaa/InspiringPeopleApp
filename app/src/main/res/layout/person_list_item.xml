<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/personName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="3dp"
        android:background="@color/cream"
        android:text="Famous Person"
        android:textColor="@color/cerise"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/personPhoto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <ImageView
        android:id="@+id/personPhoto"
        android:layout_width="145dp"
        android:layout_height="130dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/personDates"
        app:layout_constraintLeft_toRightOf="@+id/personName" />

    <TextView
        android:id="@+id/personDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/born_die"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/personPhoto"
        app:layout_constraintTop_toBottomOf="@+id/personName" />

    <TextView
        android:id="@+id/personDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description about the famous person."
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@android:color/darker_gray"
        android:textSize="11sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personDates"
       app:layout_constraintEnd_toStartOf="@+id/personPhoto"/>
</androidx.constraintlayout.widget.ConstraintLayout>